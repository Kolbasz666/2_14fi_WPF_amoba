<Window x:Class="_2_14fi_WPF_masodik.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_14fi_WPF_masodik"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <!-- <Setter Property="HorizontalContentAlignment" Value="Center"/> -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="20 15"/>
            <Setter Property="Background" Value="LightGreen"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="40 15 100 15"/>
        </Style>
    </Window.Resources>
    <Grid Background="Lime">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Amőba" Grid.Row="0" Grid.Column="0" FontSize="35"
               Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <Label Content="Regisztráció" Grid.Row="1" Grid.Column="0" FontSize="28"
               Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <Label Content="Felhasználónév" Grid.Row="2" Grid.Column="0" FontSize="19"
               Margin="120 0 0 0"/>
        <Label Content="Jelszó" Grid.Row="3" Grid.Column="0" FontSize="19"
               Margin="120 0 0 0"/>
        <Label Content="Jelszó újra" Grid.Row="4" Grid.Column="0" FontSize="19"
               Margin="120 0 0 0"/>
        <TextBox Name="username" Grid.Column="1" Grid.Row="2"/>
        <TextBox Name="password" Grid.Column="1" Grid.Row="3"/>
        <TextBox Name="password2" Grid.Column="1" Grid.Row="4"/>
        <Button Content="Regisztráció" Grid.Column="0" Grid.Row="5" Name="RegisterButton" Click="RegClick"/>
        <Button Content="Mégse" Grid.Column="1" Grid.Row="5" Name="CancelButton" Click="CancelClick"/>
    </Grid>
</Window>
